{
  "lock": false,
  "tasks": {
    "dev": "deno run --watch main.ts",
    "migrate": "deno run -A migrate.ts",
    "migrate:reset": "deno run -A migrate-reset.ts",
    "migrate:generate": "deno run -A npm:drizzle-kit generate",
    "migrate:apply": "deno run -A npm:drizzle-kit migrate",
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "cli": "echo \"import '\\$fresh/src/dev/cli.ts'\" | deno run --unstable -A -",
    "manifest": "deno task cli manifest $(pwd)",
    "start": "deno run -A --watch=static/,routes/ web.ts",
    "build": "deno run -A web.ts build",
    "preview": "deno run -A web-main.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update ."
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@libsql/client": "npm:@libsql/client@^0.15.14",
    "@std/assert": "jsr:@std/assert@1",
    "drizzle-kit": "npm:drizzle-kit@^0.31.4",
    "drizzle-orm": "npm:drizzle-orm@^0.44.5",
    "$fresh/": "https://deno.land/x/fresh@1.7.3/",
    "preact": "https://esm.sh/preact@10.22.0",
    "preact/": "https://esm.sh/preact@10.22.0/",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
    "$std/": "https://deno.land/std@0.216.0/",
    "tailwindcss": "npm:tailwindcss@3.4.1",
    "tailwindcss/": "npm:tailwindcss@3.4.1/",
    "tailwindcss/plugin": "npm:tailwindcss@3.4.1/plugin.js",
    "react": "npm:react@18.2.0",
    "react-dom": "npm:react-dom@18.2.0",
    "recharts": "npm:recharts@2.12.7"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
